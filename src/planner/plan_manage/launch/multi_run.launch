<launch>
  <!-- size of map, change the size inflate x, y, z according to your application -->
  <arg name="map_size_x" value="40.0"/>
  <arg name="map_size_y" value="40.0"/>
  <arg name="map_size_z" value=" 3.0"/>
  <arg name="map_size" value="50.0"/>

  <!-- Generate map -->
  <node pkg="mockamap" type="mockamap_node" name="mockamap_node" output="screen">
      <remap from="/mock_map" to="/map_generator/global_cloud"/>

      <param name="seed" type="int" value="127"/>
      <param name="update_freq" type="double" value="0.5"/>

      <!--  box edge length, unit meter-->
      <param name="resolution" type="double" value="0.1"/>

      <!-- map size unit meter-->
      <param name="x_length" value="$(arg map_size_x)"/>
      <param name="y_length" value="$(arg map_size_y)"/>
      <param name="z_length" value="$(arg map_size_z)"/>

      <param name="type" type="int" value="1"/>
      <!-- 1 perlin noise parameters -->
      <!-- complexity:    base noise frequency,
                              large value will be complex
                              typical 0.0 ~ 0.5 -->
      <!-- fill:          infill persentage
                              typical: 0.4 ~ 0.0 -->
      <!-- fractal:       large value will have more detail-->
      <!-- attenuation:   for fractal attenuation
                              typical: 0.0 ~ 0.5 -->

      <param name="complexity"    type="double" value="0.05"/>
      <param name="fill"          type="double" value="0.12"/>
      <param name="fractal"       type="int"    value="1"/>
      <param name="attenuation"   type="double" value="0.1"/>
  </node>

  <!-- Spawn First Robot -->
  <include file="$(find ego_planner)/launch/single_drone.launch">
    <arg name="ns"         value="drone_1"/>
    <arg name="odom_topic" value="/drone_1/visual_slam/odom"/>
    <arg name="map_size_x" value="$(arg map_size)"/>
    <arg name="map_size_y" value="$(arg map_size)"/>
    <arg name="map_size_z" value=" 3.0"/>
    <arg name="init_x" value="21.0"/>
    <arg name="init_y" value="21.0"/>
    <arg name="init_z" value="0.0"/>
  </include>
  <!-- Spawn Second Robot -->
  <include file="$(find ego_planner)/launch/single_drone.launch">
    <arg name="ns"         value="drone_2"/>
    <arg name="odom_topic" value="/drone_2/visual_slam/odom"/>
    <arg name="map_size_x" value="$(arg map_size)"/>
    <arg name="map_size_y" value="$(arg map_size)"/>
    <arg name="map_size_z" value=" 3.0"/>
    <arg name="init_x" value="21.0"/>
    <arg name="init_y" value="-21.0"/>
    <arg name="init_z" value="0.0"/>
  </include>
  <!-- Spawn Third Robot -->
  <include file="$(find ego_planner)/launch/single_drone.launch">
    <arg name="ns"         value="drone_3"/>
    <arg name="odom_topic" value="/drone_3/visual_slam/odom"/>
    <arg name="map_size_x" value="$(arg map_size)"/>
    <arg name="map_size_y" value="$(arg map_size)"/>
    <arg name="map_size_z" value=" 3.0"/>
    <arg name="init_x" value="-21.0"/>
    <arg name="init_y" value="21.0"/>
    <arg name="init_z" value="0.0"/>
  </include>
  <!-- Spawn Fourth Robot -->
  <include file="$(find ego_planner)/launch/single_drone.launch">
    <arg name="ns"         value="drone_4"/>
    <arg name="odom_topic" value="/drone_4/visual_slam/odom"/>
    <arg name="map_size_x" value="$(arg map_size)"/>
    <arg name="map_size_y" value="$(arg map_size)"/>
    <arg name="map_size_z" value=" 3.0"/>
    <arg name="init_x" value="-21.0"/>
    <arg name="init_y" value="-21.0"/>
    <arg name="init_z" value="0.0"/>
  </include>
</launch>
